{
  "name": "redux-saga-toolbox",
  "version": "0.0.1",
  "description": "Tools to make redux saga users more productive than before",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "fix-deps": "yarn remove redux redux-saga && yarn add redux redux-saga -P",
    "update-promise-queue": "yarn remove @mrnkr/promise-queue && yarn add @mrnkr/promise-queue && yarn fix-deps"
  },
  "keywords": [
    "redux",
    "redux-saga",
    "saga",
    "entity",
    "helpers",
    "tools"
  ],
  "author": "Mr.NKR",
  "license": "MIT",
  "dependencies": {
    "@mrnkr/promise-queue": "^1.0.3",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "jest": "^24.7.1",
    "redux-saga-test-plan": "v4.0.0-beta.2",
    "rxjs": "^6.5.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.4.5"
  },
  "peerDependencies": {
    "redux": "^4.0.1",
    "redux-saga": "^1.0.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts)?$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ]
  }
}
